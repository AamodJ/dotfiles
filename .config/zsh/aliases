## Aliases 

# zsh specific
alias resource="source ~/.config/zsh/.zshrc"
alias aliases="vim ~/.config/zsh/aliases"

# Config files 
alias cfv="vim ~/.config/vim/.vimrc"
alias cfz="vim ~/.config/zsh/.zshrc"
alias cfzen="vim ~/.config/zsh/.zshenv"
alias cfzp="vim ~/.config/zsh/.zprofile"
alias cfm="vim ~/.config/mutt/muttrc"
alias cfmb="vim ~/.mbsyncrc"
alias cflf="vim ~/.config/lf/lfrc"
alias cflfs="vim ~/.config/lf/scope"
alias cfb="vim ~/.config/bspwm/bspwmrc"
alias cfsx="vim ~/.config/sxhkd/sxhkdrc"
alias cfk="vim ~/.config/kitty/kitty.conf"
alias cfw="vim ~/.config/waybar/config"
alias cfws="vim ~/.config/waybar/style.css"
alias cfr="vim ~/.config/rofi/config.rasi"
alias cfp="vim ~/.config/polybar/config.ini"

# Startup scripts
alias cfx="vim ~/.config/X11/.xinitrc"
alias cfpx="vim ~/.config/X11/.xinitrc-plasma-x11"
alias cfpw="vim ~/.config/wayland/plasma-wayland"
alias cfh="vim ~/.config/hypr/hyprland.conf"
alias cfwh="vim ~/.config/wayland/wrapperhl"
alias cfhs="vim ~/.config/hypr/services"

# dotfiles alias
alias gd="/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME"

# Convenience
alias zat="zathura"
alias ts="sudo timeshift --snapshot-device /dev/nvme0n1p4"
alias usage="btrfs filesystem usage /"
alias smtp="simple-mtpfs"
alias csc="scrcpy --tcpip=192.168.1.48"
alias lf="lfrun"
alias vi="vim"
alias cur="calcurse"
alias pg="ping google.com"
alias turoff="sudo x86_energy_perf_policy --turbo-enable 0 && procoff"
alias turon="sudo x86_energy_perf_policy --turbo-enable 1 && procon"

# Restart services
alias rmb="sudo vim /etc/mbpfan.conf && sudo systemctl restart mbpfan"
alias rd="killall dunst && dunst &"

# Wacom 
alias wac="init-wacom"

# Cleanup
alias w="wget --hsts-file=\"$XDG_DATA_HOME/wget-hsts\""
alias wget="wget --hsts-file=\"$XDG_DATA_HOME/wget-hsts\""
