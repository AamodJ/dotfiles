## Aliases 

# zsh specific
alias resource="source $XDG_CONFIG_HOME/zsh/.zshrc"
alias aliases="$EDITOR $XDG_CONFIG_HOME/zsh/aliases"

# Config files 
alias cfnv="$EDITOR $XDG_CONFIG_HOME/nvim/init.vim"
alias cfz="$EDITOR $XDG_CONFIG_HOME/zsh/.zshrc"
alias cfzen="$EDITOR $XDG_CONFIG_HOME/zsh/.zshenv"
alias cfzp="$EDITOR $XDG_CONFIG_HOME/zsh/.zprofile"
alias cflf="$EDITOR $XDG_CONFIG_HOME/lf/lfrc"
alias cflfs="$EDITOR $XDG_CONFIG_HOME/lf/scope"
alias cfb="$EDITOR $XDG_CONFIG_HOME/bspwm/bspwmrc"
alias cfsx="$EDITOR $XDG_CONFIG_HOME/sxhkd/sxhkdrc"
alias cfk="$EDITOR $XDG_CONFIG_HOME/kitty/kitty.conf"
alias cfw="$EDITOR $XDG_CONFIG_HOME/waybar/config"
alias cfws="$EDITOR $XDG_CONFIG_HOME/waybar/style.css"
alias cfr="$EDITOR $XDG_CONFIG_HOME/rofi/config.rasi"
alias cfp="$EDITOR $XDG_CONFIG_HOME/polybar/config.ini"
alias cfpf="$EDITOR $XDG_CONFIG_HOME/pfetch/config"

# Startup scripts
alias cfx="$EDITOR $XDG_CONFIG_HOME/X11/.xinitrc"
alias cfpx="$EDITOR $XDG_CONFIG_HOME/X11/.xinitrc-plasma-x11"
alias cfpw="$EDITOR $XDG_CONFIG_HOME/wayland/plasma-wayland"
alias cfh="$EDITOR $XDG_CONFIG_HOME/hypr/hyprland.conf"
alias cfwh="$EDITOR $XDG_CONFIG_HOME/wayland/wrapperhl"
alias cfhs="$EDITOR $XDG_CONFIG_HOME/hypr/services"

# dotfiles alias
alias gd="/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME"

# Convenience
alias zat="zathura"
alias ts="sudo timeshift --snapshot-device /dev/nvme0n1p4"
alias usage="btrfs filesystem usage /"
alias smtp="simple-mtpfs"
alias csc="scrcpy --tcpip=192.168.1.48"
alias lf="lfrun"
alias v="$EDITOR"
alias cur="calcurse"
alias pg="ping google.com"
alias turoff="sudo x86_energy_perf_policy --turbo-enable 0 && procoff"
alias turon="sudo x86_energy_perf_policy --turbo-enable 1 && procon"
alias sinks="pactl list short sinks"
alias :q="exit"
alias st="speedtest"

# Restart services
alias rmb="sudo $EDITOR /etc/mbpfan.conf && sudo systemctl restart mbpfan"
alias rd="killall dunst && dunst &"

# Wacom 
alias wac="init-wacom"

# Cleanup
alias w="wget --hsts-file=\"$XDG_DATA_HOME/wget-hsts\""
alias wget="wget --hsts-file=\"$XDG_DATA_HOME/wget-hsts\""
