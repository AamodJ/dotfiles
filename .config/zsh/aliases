## Aliases 

# zsh specific
alias resource="source ~/.config/zsh/.zshrc"
alias aliases="vim ~/.config/zsh/aliases"

# Config files 
alias cfv="vim ~/.config/vim/.vimrc"
alias cfz="vim ~/.config/zsh/.zshrc"
alias cfm="vim ~/.config/mutt/muttrc"
alias cfmb="vim ~/.mbsyncrc"
alias cflf="vim ~/.config/lf/lfrc"
alias cflfs="vim ~/.config/lf/scope"
alias cfmpd="vim ~/.mpd/mpd.conf"
alias cfncm="vim ~/.config/ncmpcpp/config"
alias cfncb="vim ~/.config/ncmpcpp/bindings"
alias cfb="vim ~/.config/bspwm/bspwmrc"
alias cfsx="vim ~/.config/sxhkd/sxhkdrc"

## Cronjobs
alias mupd="vim ~/.config/cron/mail-update"

# dotfiles alias
alias gitdot="/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME"

# Convenience
alias zat="zathura"
alias ts="sudo timeshift --snapshot-device /dev/nvme0n1p4"
alias usage="btrfs filesystem usage /"

# Restart services
alias fblast="sudo cp ~/.config/fan/fullblast.conf /etc/mbpfan.conf && sudo systemctl restart mbpfan"
alias ablast="sudo cp ~/.config/fan/automatic.conf /etc/mbpfan.conf && sudo systemctl restart mbpfan"
alias rmb="sudo vim /etc/mbpfan.conf && sudo systemctl restart mbpfan"

# Wacom 
alias wac="init-wacom"
